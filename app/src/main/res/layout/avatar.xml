<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <!-- Larger and perfectly round Avatar Image -->
        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:radius = "75dp"
            android:src="@drawable/avatar_placeholder" <!-- Placeholder image -->
        android:contentDescription="User Avatar"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:background="@drawable/avatar_circle_background"
        android:scaleType="centerCrop" <!-- Ensures the image fits perfectly inside the circle -->
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

        <!-- User's Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <!-- Section Title: Stats -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self-Improvement Stats"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:paddingBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Stats: Intelligence -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intelligence"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <ProgressBar
            android:id="@+id/intelligence_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="24dp"
            android:progress="70"
            android:max="100"
            android:progressTint="#4CAF50"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Stats: Attention -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attention"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <ProgressBar
            android:id="@+id/attention_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="24dp"
            android:progress="50"
            android:max="100"
            android:progressTint="#FF9800"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Stats: Personality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personality"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <ProgressBar
            android:id="@+id/personality_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="24dp"
            android:progress="80"
            android:max="100"
            android:progressTint="#3F51B5"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Stats: Self-Discipline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self-Discipline"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <ProgressBar
            android:id="@+id/self_discipline_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="24dp"
            android:progress="90"
            android:max="100"
            android:progressTint="#F44336"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
