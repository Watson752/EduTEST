<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/wallpaper_background">

    <!-- Welcome Back Popup -->
    <LinearLayout
        android:id="@+id/popup_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/popup_background"
        android:elevation="8dp"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back, User!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/streak_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get back to your streak!"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <Button
            android:id="@+id/btn_start_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Quiz"
            android:textColor="#FFFFFF"
            android:background="@color/primaryColor"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Main Activity Content: Quiz Section -->
    <LinearLayout
        android:id="@+id/quiz_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/quiz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Self-Discipline Quiz"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Quiz Question -->
        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question goes here"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <!-- Answer Options (Just placeholders, you can add more dynamically) -->
        <RadioGroup
            android:id="@+id/answer_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textColor="#FFFFFF"/>

            <RadioButton
                android:id="@+id/option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textColor="#FFFFFF"/>

            <RadioButton
                android:id="@+id/option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:background="@color/primaryColor"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"/>
    </LinearLayout>
</RelativeLayout>
